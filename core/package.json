{
  "name": "@unicorndesign/core",
  "version": "1.3.6",
  "description": "Unicorn Design System Component Library",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/interface.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/unicorn/unicorn.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/unicef-new-zealand/unicorn.git",
    "directory": "core"
  },
  "files": [
    "dist/",
    "loader/",
    "theming/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:stencil && sh ce-patch/patch.sh",
    "build:css": "cp -r src/css/theming/ theming && sass ./src/css/prebuilt:./theming/prebuilt --style compressed",
    "build:stencil": "stencil build --docs",
    "build:storybook": "build-storybook",
    "clean": "rm -rf ./theming ./loader ./dist ./www ./.stencil",
    "generate": "stencil generate",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "start": "stencil build --watch",
    "start:storybook": "start-storybook -p 6006",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --watch ",
    "chromatic": "chromatic --build-script-name build:storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@stencil/core": "^2.6.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/sass": "^1.4.1",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/web-components": "^6.3.4",
    "@types/jest": "^26.0.24",
    "@types/puppeteer": "^5.4.4",
    "@unicefnz/eslint-config": "^2.0.7",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "css-loader": "^5.2.6",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "lit-html": "^1.4.1",
    "puppeteer": "^10.1.0",
    "rollup": "^2.53.1",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5"
  },
  "license": "MIT"
}
