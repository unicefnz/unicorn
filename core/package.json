{
  "name": "@unicef-new-zealand/uniform-core",
  "version": "1.0.0-7",
  "description": "Uniform Core Web Component Library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/uniform-alpha/uniform-alpha.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/unicef-new-zealand/uniform.git",
    "directory": "core"
  },
  "files": [
    "dist/",
    "loader/",
    "theming/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:stencil",
    "build:css": "cp -r src/css/theming/ theming && sass ./src/css/prebuilt:./theming/prebuilt --style compressed",
    "build:stencil": "stencil build --docs",
    "build:storybook": "build-storybook",
    "clean": "rm -rf ./theming ./loader ./dist ./www ./.stencil",
    "generate": "stencil generate",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "start": "stencil build --watch",
    "start:storybook": "start-storybook -p 6006",
    "test": "stencil test --spec --e2e",
    "test:stencil-watch": "stencil test --spec --e2e --watchAll",
    "chromatic": "chromatic --build-script-name build:storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@stencil/core": "^1.14.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/react-output-target": "0.0.6",
    "@stencil/sass": "^1.3.1",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/html": "^5.3.19",
    "@storybook/preset-typescript": "^3.0.0",
    "@types/jest": "25.2.3",
    "@types/puppeteer": "1.20.4",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@unicefnz/eslint-config": "^1.3.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "fork-ts-checker-webpack-plugin": "^4.1.3",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "puppeteer": "1.20.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "storybook-chromatic": "^3.5.3",
    "ts-jest": "^25.3.1",
    "ts-loader": "^7.0.0",
    "typescript": "^3.9.3"
  },
  "license": "UNLICENSED",
  "dependencies": {}
}
