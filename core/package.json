{
  "name": "@unicorndesign/core",
  "version": "1.3.2",
  "description": "Unicorn Design System Component Library",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/interface.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/unicorn/unicorn.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/unicef-new-zealand/unicorn.git",
    "directory": "core"
  },
  "files": [
    "dist/",
    "loader/",
    "theming/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:stencil && sh ce-patch/patch.sh",
    "build:css": "cp -r src/css/theming/ theming && sass ./src/css/prebuilt:./theming/prebuilt --style compressed",
    "build:stencil": "stencil build --docs",
    "build:storybook": "build-storybook",
    "clean": "rm -rf ./theming ./loader ./dist ./www ./.stencil",
    "generate": "stencil generate",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "start": "stencil build --watch",
    "start:storybook": "start-storybook -p 6006",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --watch ",
    "chromatic": "chromatic --build-script-name build:storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@stencil/core": "^2.4.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/sass": "^1.4.1",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-docs": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/web-components": "^6.1.21",
    "@types/jest": "^26.0.20",
    "@types/puppeteer": "^5.4.3",
    "@unicefnz/eslint-config": "^2.0.5",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.7.0",
    "css-loader": "^5.1.2",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "lit-html": "^1.3.0",
    "puppeteer": "^8.0.0",
    "rollup": "^2.41.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3"
  },
  "license": "MIT"
}
