{
  "name": "@unicorndesign/core",
  "version": "1.2.2-beta.2",
  "description": "Unicorn Design System Component Library",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/interface.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/unicorn/unicorn.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/unicef-new-zealand/unicorn.git",
    "directory": "core"
  },
  "files": [
    "dist/",
    "loader/",
    "theming/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:stencil && sh ce-patch/patch.sh",
    "build:css": "cp -r src/css/theming/ theming && sass ./src/css/prebuilt:./theming/prebuilt --style compressed",
    "build:stencil": "stencil build --docs",
    "build:storybook": "build-storybook",
    "clean": "rm -rf ./theming ./loader ./dist ./www ./.stencil",
    "generate": "stencil generate",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "start": "stencil build --watch",
    "start:storybook": "start-storybook -p 6006",
    "test": "stencil test --spec --e2e",
    "test:watch": "stencil test --spec --watch ",
    "chromatic": "chromatic --build-script-name build:storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@stencil/core": "^2.3.0",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/sass": "^1.4.0",
    "@storybook/addon-actions": "^6.1.9",
    "@storybook/addon-docs": "^6.1.9",
    "@storybook/addon-knobs": "^6.1.9",
    "@storybook/web-components": "^6.1.9",
    "@types/jest": "25.2.3",
    "@types/puppeteer": "1.20.4",
    "@unicefnz/eslint-config": "^2.0.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.4.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.14.0",
    "jest": "^26.6.3",
    "jest-cli": "24.9.0",
    "lit-html": "^1.3.0",
    "puppeteer": "1.20.0",
    "rollup": "^2.34.0",
    "sass": "^1.29.0",
    "sass-loader": "^8.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^7.0.5",
    "typescript": "^4.0.3"
  },
  "license": "MIT"
}
