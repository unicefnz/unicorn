{
  "name": "@unicorndesign/core",
  "version": "1.0.4-next.0",
  "description": "Unicorn Design System Component Library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/interface.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/unicorn/unicorn.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/unicef-new-zealand/unicorn.git",
    "directory": "core"
  },
  "files": [
    "dist/",
    "loader/",
    "theming/"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:stencil",
    "build:css": "cp -r src/css/theming/ theming && sass ./src/css/prebuilt:./theming/prebuilt --style compressed",
    "build:stencil": "stencil build --docs",
    "build:storybook": "build-storybook",
    "clean": "rm -rf ./theming ./loader ./dist ./www ./.stencil",
    "generate": "stencil generate",
    "lint": "eslint src --ext .ts,.tsx,.js",
    "start": "stencil build --watch",
    "start:storybook": "start-storybook -p 6006",
    "test": "npm run lint && stencil test --spec --e2e",
    "test:stencil-watch": "stencil test --spec --e2e --watchAll",
    "chromatic": "chromatic --build-script-name build:storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@stencil/core": "^1.17.3",
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/react-output-target": "0.0.6",
    "@stencil/sass": "^1.3.2",
    "@storybook/addon-actions": "^6.0.12",
    "@storybook/addon-docs": "^6.0.12",
    "@storybook/addon-knobs": "^6.0.12",
    "@storybook/web-components": "^6.0.12",
    "@types/jest": "25.2.3",
    "@types/puppeteer": "1.20.4",
    "@unicefnz/eslint-config": "^2.0.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.1.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.9.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "jest": "^26.4.0",
    "jest-cli": "24.9.0",
    "lit-html": "^1.2.1",
    "puppeteer": "1.20.0",
    "sass": "^1.26.10",
    "sass-loader": "^8.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^7.0.5",
    "typescript": "^4.0.2"
  },
  "license": "MIT"
}
